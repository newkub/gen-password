{
  "name": "@newkub/gen-password",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.5",
  "globalConcurrency": 32,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "start": "turbo watch verify",
    "postinstall": "taze -r -w -i",
    "prepare": "lefthook install",
    "dev": "turbo dev --ui=tui",
    "format": "turbo format",
    "scan": "sg scan -r",
    "check:modules": "bunx node-modules-inspector",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "verify": "turbo verify",
    "clean": "bunx rimraf */bun.lockb */node_modules"
  },
  "devDependencies": {
    "turbo": "^2.7.2",
    "lefthook": "^2.0.13",
    "taze": "^19.7.0",
    "node-modules-inspector": "^0.4.1",
    "rimraf": "^6.0.1"
  },
  "trustedDependencies": [
    "@gen-password/extension",
    "@gen-password/web",
    "@parcel/watcher",
    "spawn-sync"
  ]
}
