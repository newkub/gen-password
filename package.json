{
  "name": "gen-password",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.5",
  "globalConcurrency": 32,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "watch": "turbo watch verify",
    "prepare": "bunx lefthook install",
    "dev": "turbo dev --ui=tui",
    "format": "turbo format",
    "scan": "sg scan -r",
    "check:modules": "bunx node-modules-inspector",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "verify": "turbo verify"
  },
  "devDependencies": {
    "lefthook": "^2.0.13",
    "node-modules-inspector": "^1.2.0",
    "rimraf": "^6.1.2",
    "taze": "^19.9.2",
    "turbo": "^2.7.2"
  }
 
}
