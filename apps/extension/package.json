		"test": "bun run typecheck",
		"verify": "bun run format && bun run lint && bun run test && bun run build"
	},
	"devDependencies": {
		"@types/chrome": "^0.1.32",
		"dprint": "^0.51.1",
		"oxlint": "^1.36.0",
		"oxlint-tsgolint": "^0.10.0",
		"typescript": "^5.9.3",
		"wxt": "^0.20.13"
	}
}
