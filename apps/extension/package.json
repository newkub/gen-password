{
	"name": "@gen-password/extension",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "wxt",
		"dev:firefox": "wxt -b firefox",
		"build": "wxt build",
		"build:firefox": "wxt build -b firefox",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"prepare": "wxt prepare",
		"format": "dprint fmt",
		"lint": "oxlint --fix --type-aware",
