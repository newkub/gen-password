{
	"$schema": "https://turbo.build/schema.json",
	"ui": "stream",
	"globalDependencies": [
		"**/.env.*local",
		"**/.env",
		"**/package.json",
		"**/bun.lock"
	],
	"concurrency": "32",
	"tasks": {
		"start": {
			"cache": false,
			"persistent": true
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"prepare": {
			"cache": false
		},
		"format": {
			"dependsOn": [
				"^prepare"
			]
		},
		"build": {
			"dependsOn": [
				"^lint"
			],
			"outputs": [
				".output/**",
				".nuxt/**",
				"dist/**",
				"build/**",
				".wxt/**"
			],
			"cache": false
		},
		"lint": {
			"dependsOn": [
				"^format"
			],
			"cache": false,
			"outputs": []
		},
		"test": {
			"dependsOn": [
				"^lint"
			],
			"cache": true,
			"outputs": []
		},
		"verify": {
			"dependsOn": [
				"^test"
			],
			"cache": false
		},
		"preview": {
			"dependsOn": [
				"^verify"
			]
		}
	}
}
